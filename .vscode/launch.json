    "version": "0.2.0",
    "configurations": [
      {
        "type": "lldb",
        "request": "launch",
        "name": "lldb:node",
        "program": "node",
        "args": ["${workspaceFolder}/examples/transform.js"],
        "cwd": "${workspaceFolder}",
        "preLaunchTask": "cmake-js build"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run selected Jest test",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run-script",
          "test"
        ],
        "args": [
          "--",
          "-i",
          "${relativeFile}",
          "-t",
          "${selectedText}"
        ],
        "console": "integratedTerminal",
      }
    ]
  }