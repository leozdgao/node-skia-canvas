{
  "name": "node-skia-canvas",
  "version": "0.1.0",
  "description": "Skia based graphics canvas run on node.js, written in Node-API",
  "main": "lib/index.js",
  "scripts": {
    "build:skia:debug": "SKIA_DEBUG=1 SKIA_FEATURES=textlayout node scripts/build_tools/build_skia.js",
    "build:skia:release": "SKIA_USE_SYSTEM_LIB=1 SKIA_FEATURES=textlayout node scripts/build_tools/build_skia.js",
    "build:dev": "cmake-js configure -D && cmake-js compile -D",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leozdgao/node-skia.git"
  },
  "keywords": [],
